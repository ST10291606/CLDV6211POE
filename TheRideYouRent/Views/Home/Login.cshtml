@model InspectorModel
@{
    ViewData["Title"] = "Login";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h1 class="text-center">Login</h1>
<section class="vh-100">
    <div class="container-fluid h-custom">
        <div class="row d-flex justify-content-center align-items-center h-100">
            <div class="col-md-9 col-lg-6 col-xl-5">
                <img src="~/lib/Images/Login_RideYouRent.jpg" class="img-fluid"
                     alt="Sample image">
            </div>
            <div class="col-md-9 col-lg-6 col-xl-5 offset-xl-1">
                <form asp-action="Login">
                    <div class="d-flex flex-row align-items-center justify-content-center justify-content-lg-start">
                        <p class="lead fw-normal mb-0 me-3"></p>
                    </div>
                    <div class="divider d-flex align-items-center my-4">
                        <p class="text-center fw-bold mx-3 mb-0"></p>
                    </div>
                    <div class="divider d-flex align-items-center my-4">
                        <p class="text-center fw-bold mx-3 mb-0"></p>
                    </div>
                    <div class="divider d-flex align-items-center my-4">
                        <p class="text-center fw-bold mx-3 mb-0"></p>
                    </div>

                    <!-- Username input -->
                    <div class="form-group form-outline mb-4">
                        <input type="text" asp-for="name" class="form-control form-control-lg" placeholder="Enter a valid username" />
                        <label class="form-label" asp-for="name">Username</label>
                        <span asp-validation-for="name" class="text-danger"></span>
                    </div>

                    <!-- Password input -->
                    <div class="form-group form-outline mb-3">
                        <input type="password" asp-for="inspectorNo" class="form-control form-control-lg" placeholder="Enter Inspector Number" />
                        <label class="form-label" asp-for="inspectorNo">Password</label>
                        <span asp-validation-for="inspectorNo" class="text-danger"></span>
                    </div>

                    <div class="d-flex justify-content-between align-items-center">
                        <!-- Checkbox -->
                        <div class="form-check mb-0">
                            <input class="form-check-input me-2" type="checkbox" value="" id="form2Example3" />
                            <label class="form-check-label" for="form2Example3">
                                Remember me
                            </label>
                        </div>
                    </div>

                    <div class="text-center text-lg-start mt-4 pt-2">
                        <div class="form-group">


                        </div>
                        <p class="small fw-bold mt-2 pt-1 mb-0">
                            Don't have an account? <a asp-action="Register"
                                                      class="link-danger">Register</a>
                        </p>
                        <a asp-controller="Home" asp-action="Index">Login</a>
                    </div>

                </form>
            </div>
        </div>
    </div>
</section>